server {
    listen 5000;
    server_name 212.1.214.82;

    location = /favicon.ico { access_log off; log_not_found off; }

    location /static/ {
        root /var/lib/jenkins/workspace/Education-Law-collage;
    }

    location /media/ {
        root /var/lib/jenkins/workspace/Education-Law-collage;
    }

    location / {
        include proxy_params;
        proxy_pass http://unix:/run/education_gunicorn.sock;
    }

    error_page 500 502 503 504 /500.html;
    location = /500.html {
        root /var/lib/jenkins/workspace/Education-Law-collage/templates/;
    }
}